{
  "AWSEBDockerrunVersion": "1",
  "containerDefinitions": [
    {
      "name": "client",
      "image": "ciabas/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "ciabas/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "ciabas/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "ciabas/multi-nginx",
      "essential": true,
      "portMappings": [{ "host": 80, "containerPort": 80 }],
      "links": ["client", "server"],
      "memory": 128
    }
  ]
}
